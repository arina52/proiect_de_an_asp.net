
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/layouts/_EmptyLayout.cshtml";
}

@model culinaryConnect.Domain.Entities.Category.CategoryPageModel
@{
    Layout = "~/Views/Shared/layouts/_EmptyLayout.cshtml";
}

<!-- Category Creation Form Section Begin -->
<div class="container mt-5">
    <h2 class="text-center mb-4" style="font-weight: 700;">Creați o categorie nouă</h2>
    @using (Html.BeginForm("AddCategory", "admin", FormMethod.Post, new { @class = "category-form" }))
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.FormCategory.Title, "Numele categoriei")
                    @Html.TextBoxFor(m => m.FormCategory.Title, new { @class = "form-control", placeholder = "Introduceți numele categoriei" })
                    @Html.ValidationMessageFor(m => m.FormCategory.Title)
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Adăugați categorie</button>
                </div>
            </div>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div>
            @ViewBag.ErrorMessage
        </div>
    }
</div>
<!-- Category Creation Form Section End -->
<!-- Category List Table -->
@if (Model != null && Model.Categories != null && Model.Categories.Count > 0)
{
    <div class="container mt-5">
        <h3 class="mb-4 fw-semibold">Categorii existente</h3>

        <table class="table table-hover table-bordered">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Titlu</th>
                    <th scope="col" style="width: 160px;">Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td class="align-middle text-center">@category.Id</td>
                        <td class="align-middle">@category.Title</td>
                        <td>
                            <div class="d-flex flex-column gap-1">
                                <!-- Delete Button -->
                                <div class="mb-2">
                                    @using (Html.BeginForm("DeleteCategory", "Admin", FormMethod.Post, new { onsubmit = "return confirm('Sigur doriți să ștergeți această categorie?');" }))
                                    {
                                        @Html.Hidden("ID", category.Id)
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                            <i class="bi bi-trash"></i> Șterge
                                        </button>
                                    }
                                </div>

                                <!-- Update Form -->
                                @using (Html.BeginForm("UpdateCategory", "Admin", FormMethod.Post, new { onsubmit = "return confirm('Sigur doriți să actualizați această categorie?');" }))
                                {
                                    <div class="input-group input-group-sm">
                                        @Html.Hidden("ID", category.Id)
                                        <input type="text" name="newTitle" class="form-control form-control-sm mr-1" value="@category.Title" />
                                        <button type="submit" class="btn btn-outline-secondary">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
