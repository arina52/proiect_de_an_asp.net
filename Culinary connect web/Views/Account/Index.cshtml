@{
    Layout = "~/Views/Shared/layouts/_EmptyLayout.cshtml";
}
@model culinaryConnect.Domain.Entities.User.User

@{
    var userInitial = Model.Name?.FirstOrDefault().ToString().ToUpper();
}

<div class="bg-light vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-sm w-100" style="max-width: 400px;">
        <div class="card-body text-center">
            <div class="mx-auto rounded-circle bg-primary text-white d-flex justify-content-center align-items-center mb-3"
                 style="width: 80px; height: 80px; font-size: 2rem;">
                @userInitial
            </div>
            <h5 class="card-title mb-1">@Model.Name</h5>
            <p class="card-text text-muted mb-4">@Model.Email</p>

            <div class="d-flex flex-column">
                <a href="@Url.Action("recipes", "account")" class="btn btn-outline-primary btn-block mb-2">
                    Vezi rețete
                </a>
                <a href="@Url.Action("favorites", "account")" class="btn btn-outline-secondary btn-block mb-2">
                    Favorite
                </a>
                @using (Html.BeginForm("logout", "login", FormMethod.Post, new { @class = "d-block" }))
                {
                    <button type="submit" class="btn btn-danger btn-block">
                        Ieși din cont
                    </button>
                }
            </div>
        </div>
    </div>
</div>
