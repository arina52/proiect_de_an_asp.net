
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@model culinaryConnect.Domain.Entities.Recipe.RecipesPageModel
<div class="container mt-4">
    <h2 class="mb-4">Edit Recipe</h2>

    @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.RecipeForm.Id)

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.RecipeForm.Title, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.RecipeForm.Title, new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.RecipeForm.AboutRecipe.Description, "Description", new { @class = "form-label" })
            @Html.TextAreaFor(m => m.RecipeForm.AboutRecipe.Description, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.RecipeForm.AboutRecipe.Ingredients, new { @class = "form-label" })
            @Html.TextAreaFor(m => m.RecipeForm.AboutRecipe.Ingredients, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.RecipeForm.AboutRecipe.Instructions, new { @class = "form-label" })
            @Html.TextAreaFor(m => m.RecipeForm.AboutRecipe.Instructions, new { @class = "form-control", rows = 4 })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.RecipeForm.AboutRecipe.CookingTime, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.RecipeForm.AboutRecipe.CookingTime, new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            @Html.Label("Upload New Image", new { @class = "form-label" })
            <input type="file" name="RecipeImage" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.RecipeForm.ImagePath))
            {
                <div class="mt-2">
                    <img src="~/Content/Images/recipe/@Model.RecipeForm.ImagePath" alt="Current Image" width="150" class="img-thumbnail" />
                </div>
            }
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.RecipeForm.CategoryID, "Category", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.RecipeForm.CategoryID, new SelectList(Model.Categories, "Id", "Name"))
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a href="@Url.Action("Recipes", "Account")" class="btn btn-secondary ms-2">Cancel</a>
    }
</div>